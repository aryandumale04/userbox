<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
    <div class = "w-full h-full  bg-zinc-900 p-10 text-white ">
        <a class="text-blue-500" href="/">Back to Home</a>
       <h1 class = "text-3xl tracking-tighter mt-10 mb-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length > 0){ %>
                <% users.forEach(function(e){ %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-52 rounded-lg bg-red-500 overflow-hidden">
                            <img  class="w-full h-full object-cover" src="<%= e.image %>" alt="">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%= e.name %></h3>
                        <h5 class=" text-zinc-500"> <%= e.email %></h5>
                        <div class="flex gap-3 mt-10 justify-between">
                            <a  class="text-zinc-200" href="/edit/<%= e._id %>" >Edit User</a>
                            <a  class="text-red-600" href="/delete/<%= e._id %>">Delete User</a>
                        </div>
                    </div>
    
                <% }) %>

            <% } else{ %>
                    <h3 class="text-zinc-500"> No Users Yet.</h3>
                <% } %>
                

            
            
            
           
            
            
        </div>
    </div>
</body>
</html>